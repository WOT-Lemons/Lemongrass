[Unit]
Description=Reverse SSH Service
ConditionPathExists=|/usr/bin
After=network.target

[Service]
User=pi
ExecStart=/usr/bin/ssh -NTC -o ServerAliveInterval=60 -o ExitOnForwardFailure=yes -o StrictHostKeyChecking=no -R 2222:localhost:22 pi@comms.wotlemons.com

# Restart every >2 seconds to avoid StartLimitInterval failure
RestartSec=3
Restart=always

[Install]
WantedBy=multi-user.target
